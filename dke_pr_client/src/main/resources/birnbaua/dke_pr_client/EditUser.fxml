<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="309.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="birnbaua.dke_pr_client.UserController">
   <center>
      <BorderPane prefHeight="480.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name">
                     <VBox.margin>
                        <Insets left="4.0" top="4.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="firstName" promptText="Insert first name">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="lastName" promptText="Insert lastname">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="id" promptText="student ID">
                     <VBox.margin>
                        <Insets left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="save" mnemonicParsing="false" onAction="#onSave" text="save">
                     <VBox.margin>
                        <Insets left="4.0" top="4.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
         <items>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create or edit User">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Text>
         </items>
      </ToolBar>
   </top>
</BorderPane>
